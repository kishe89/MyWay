<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#999999" />
            <corners android:radius="16dp" />

        </shape>
    </item>
    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="1dp"
        android:right="1dp"
        >
        <shape
            android:shape="rectangle"
            >
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
            <corners android:radius="16dp" />
            <gradient
                android:startColor="@color/cardview_background"
                android:endColor="@color/cardview_background"
                android:type="linear"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>