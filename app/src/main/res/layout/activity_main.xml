<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainActivityBackGround"
    tools:context="com.kmlwriter.kjw.myway.MainActivity">

    <TextView
        android:id="@+id/AppTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/AppTitle_marginTop"
        android:text="@string/app_name"
        android:textSize="@dimen/AppTitleSize"
        android:textColor="@color/AppTitle_color"
        android:textStyle="italic|bold"
        android:textAlignment="center"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="@dimen/main_world_animation_width"
        android:layout_height="@dimen/main_world_animation_height"
        android:layout_below="@id/AppTitle"
        android:layout_centerHorizontal="true"
        app:lottie_fileName="main_world_animation.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/animation_view"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"/>
    <Button
        android:id="@+id/login_btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/login_btn_facebook_marginLeft"
        android:layout_marginRight="@dimen/login_btn_facebook_marginRight"
        android:layout_marginBottom="@dimen/login_btn_facebook_marginBottom"
        android:background="@drawable/facebook_login_button_drawable"
        android:text="페이스북 로그인"
        android:textColor="@color/colorFaceBookBtn_text"
        android:textStyle="bold" />
</RelativeLayout>
